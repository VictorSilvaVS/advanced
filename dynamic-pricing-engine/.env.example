# Environment Configuration - COPY TO .env FOR LOCAL DEVELOPMENT

# Application Environment
ENV=development
DEBUG=true

# Kafka Configuration
KAFKA_BROKER=kafka:9092

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL=3600

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=pricing_user
POSTGRES_PASSWORD=pricing_password
POSTGRES_DB=pricing_db

# Scraper Service Configuration
SCRAPER_HOST=0.0.0.0
SCRAPER_PORT=8001

# Pricing API Configuration
PRICING_API_HOST=0.0.0.0
PRICING_API_PORT=8000

# Pricing Rules Configuration
MINIMUM_MARGIN=0.10        # 10% minimum margin
MAXIMUM_MARGIN=0.50        # 50% maximum margin
ELASTICITY_FACTOR=1.5      # Price elasticity multiplier
PRICE_UPDATE_INTERVAL=300  # 5 minutes in seconds

# Performance Configuration
BATCH_SIZE=1000
WORKER_THREADS=4
