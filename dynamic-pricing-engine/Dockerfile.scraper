# Dockerfile para Scraper Service
FROM python:3.11-slim

WORKDIR /app

# Instala dependências do sistema
RUN apt-get update && apt-get install -y \
    gcc \
    postgresql-client \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copia requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copia código
COPY src/ src/
COPY config/ config/

# Expõe porta
EXPOSE 8001

# Inicia serviço
CMD ["python", "-m", "src.scraper_service.main"]
