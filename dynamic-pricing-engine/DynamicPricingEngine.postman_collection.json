  "item": [
    {
      "name": "Pricing API",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Get Price by SKU",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/price/SKU001",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "price", "SKU001"]
            }
          }
        },
        {
          "name": "Get Price with Metrics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/price/SKU002?include_metrics=true",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "price", "SKU002"],
              "query": [
                {
                  "key": "include_metrics",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Get Batch Prices",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"skus\": [\"SKU001\", \"SKU002\", \"SKU003\", \"SKU004\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/prices/batch",
